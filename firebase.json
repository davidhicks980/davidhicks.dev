{
  "database": {
    "rules": "database.rules.json",
    "config": {
      "projectId": "davidhicks-dev",
      "storageBucket": "davidhicks-dev.appspot.com"
    }
  },
  "functions": {
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build",
    "source": "functions"
  },
  "hosting": {
    "site": "davidhicks-dev",
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
